{
  "name": "sa-offline-dicom-viewer",
  "version": "1.0.0",
  "description": "Offline DICOM Viewer for South African Healthcare - Ubuntu Patient Care System",
  "main": "src/index.js",
  "scripts": {
    "start": "webpack serve --mode development",
    "build": "webpack --mode production",
    "build-electron": "electron-builder",
    "electron": "electron .",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "serve": "http-server dist -p 8080 -c-1"
  },
  "keywords": [
    "DICOM",
    "offline",
    "medical-imaging",
    "south-africa",
    "pacs",
    "radiology"
  ],
  "author": "Ubuntu Patient Care Team",
  "license": "MIT",
  "dependencies": {
    "cornerstone-core": "^2.6.1",
    "cornerstone-math": "^0.1.10",
    "cornerstone-tools": "^6.0.10",
    "cornerstone-web-image-loader": "^2.1.1",
    "cornerstone-wado-image-loader": "^4.1.2",
    "dicom-parser": "^1.8.21",
    "hammerjs": "^2.0.8",
    "localforage": "^1.10.0",
    "dexie": "^3.2.4",
    "jszip": "^3.10.1",
    "file-saver": "^2.0.5",
    "pdf-lib": "^1.17.1",
    "html2canvas": "^1.4.1",
    "crypto-js": "^4.1.1"
  },
  "devDependencies": {
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "html-webpack-plugin": "^5.5.3",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "file-loader": "^6.2.0",
    "copy-webpack-plugin": "^11.0.0",
    "electron": "^25.3.0",
    "electron-builder": "^24.4.0",
    "jest": "^29.6.1",
    "eslint": "^8.45.0",
    "http-server": "^14.1.1"
  },
  "build": {
    "appId": "com.ubuntupatientcare.dicomviewer",
    "productName": "SA Offline DICOM Viewer",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "src/electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
