# Multi-stage build for Kiro Agent
FROM python:3.11-slim as builder

WORKDIR /build

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .

# Build wheels
RUN pip install --user --no-cache-dir -r requirements.txt

# Runtime stage
FROM python:3.11-slim

WORKDIR /app

# Install runtime dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    libpq5 \
    curl \
    openssh-client \
    smbclient \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN useradd -m -u 999 kiro

# Copy Python dependencies from builder
COPY --from=builder /root/.local /home/kiro/.local

# Copy application code
COPY --chown=kiro:kiro . .

# Set environment
ENV PATH=/home/kiro/.local/bin:$PATH \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# Create necessary directories
RUN mkdir -p /var/lib/kiro-agent /etc/kiro-agent && \
    chown -R kiro:kiro /var/lib/kiro-agent /etc/kiro-agent /app

USER kiro

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8001/health/live || exit 1

# Run agent service
CMD ["python", "-m", "agent.service"]
