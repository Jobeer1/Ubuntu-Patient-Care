# =================================================================
# MCP Medical Server - Docker Environment Configuration
# =================================================================

# DATABASE CONFIGURATION
DB_PASSWORD=mcp_password_change_me
DB_USER=mcp_user
DB_NAME=mcp_credentials
DB_HOST=postgres
DB_PORT=5432
DATABASE_URL=postgresql://mcp_user:mcp_password_change_me@postgres:5432/mcp_credentials

# REDIS CONFIGURATION
REDIS_PASSWORD=redis_password_change_me
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://:redis_password_change_me@redis:6379/0

# APPLICATION CONFIGURATION
ENVIRONMENT=development
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# SECURITY
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
VAULT_ENCRYPTION_KEY=your-vault-key-change-in-production

# VAULT CONFIGURATION
VAULT_TYPE=local
VAULT_PATH=/var/lib/mcp-server/vault.db
ENCRYPTION_KEY_PATH=/var/lib/mcp-server/vault.key

# API CONFIGURATION
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# AGENT CONFIGURATION
AGENT_PORT=8001
AGENT_HOST=0.0.0.0
MCP_SERVER_URL=http://mcp-server:8000

# LOGGING
LOG_FORMAT=json
LOG_OUTPUT=stdout

# RATE LIMITING
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# AUDIT & COMPLIANCE
AUDIT_ENABLED=true
AUDIT_MERKLE_TREE_TYPE=binary
AUDIT_LOG_RETENTION_DAYS=365

# CORS CONFIGURATION
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# DOCKER COMPOSE SETTINGS
COMPOSE_PROJECT_NAME=mcp-medical

