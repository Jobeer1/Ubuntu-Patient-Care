{
  "sqlite_development": {
    "type": "sqlite",
    "file_path": "./data/orthanc_management_dev.db",
    "description": "Development SQLite database"
  },
  "sqlite_testing": {
    "type": "sqlite", 
    "file_path": ":memory:",
    "description": "In-memory SQLite for testing"
  },
  "mysql_production": {
    "type": "mysql",
    "host": "localhost",
    "port": 3306,
    "database": "orthanc_management",
    "username": "orthanc_user",
    "password": "secure_password_here",
    "pool_size": 20,
    "max_overflow": 30,
    "timeout": 30,
    "description": "Production MySQL database"
  },
  "postgresql_production": {
    "type": "postgresql",
    "host": "localhost",
    "port": 5432,
    "database": "orthanc_management",
    "username": "orthanc_user", 
    "password": "secure_password_here",
    "pool_size": 15,
    "max_overflow": 25,
    "timeout": 30,
    "description": "Production PostgreSQL database"
  },
  "firebird_archive": {
    "type": "firebird",
    "file_path": "./data/orthanc_archive.fdb",
    "username": "ORTHANC_USER",
    "password": "secure_password_here",
    "pool_size": 10,
    "description": "Firebird database for long-term archival"
  },
  "sqlserver_enterprise": {
    "type": "sqlserver",
    "host": "sql-server.healthcare.local",
    "port": 1433,
    "database": "OrthancManagement",
    "username": "orthanc_service",
    "password": "enterprise_password_here",
    "pool_size": 25,
    "timeout": 45,
    "connection_params": {
      "driver": "ODBC Driver 17 for SQL Server",
      "encrypt": "yes",
      "trust_server_certificate": "no"
    },
    "description": "Enterprise SQL Server database"
  },
  "oracle_hospital": {
    "type": "oracle",
    "host": "oracle.hospital.local",
    "port": 1521,
    "database": "XEPDB1",
    "username": "orthanc_user",
    "password": "oracle_password_here", 
    "pool_size": 20,
    "connection_params": {
      "service_name": "orthanc_service"
    },
    "description": "Oracle database for hospital integration"
  }
}
