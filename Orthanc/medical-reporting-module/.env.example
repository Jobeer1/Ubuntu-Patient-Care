# Medical Reporting Module Environment Configuration

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
PORT=5001

# Database Configuration
DATABASE_URL=sqlite:///medical_reporting.db
# For production PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/medical_reporting

# Orthanc DICOM Server
ORTHANC_URL=http://localhost:8042
ORTHANC_USERNAME=orthanc
ORTHANC_PASSWORD=orthanc

# SA Medical System Integration
SA_MEDICAL_SYSTEM_URL=http://localhost:5000
SA_MEDICAL_API_KEY=your-api-key-here

# NAS Storage Configuration
NAS_MOUNT_POINT=/mnt/nas
NAS_BACKUP_ENABLED=true
NAS_BACKUP_PATH=/mnt/nas/medical_reports

# RIS System (Optional)
RIS_URL=
RIS_USERNAME=
RIS_PASSWORD=
RIS_ENABLED=false
HL7_ENABLED=false

# Speech-to-Text Configuration
STT_PROVIDER=local
STT_MODEL_PATH=models/stt_sa_medical.model
STT_LANGUAGE=en-ZA

# Typist System
TYPIST_NOTIFICATION_EMAIL=typists@hospital.co.za
TYPIST_SMS_ENABLED=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/medical_reporting.log

# Security
WTF_CSRF_ENABLED=true
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS